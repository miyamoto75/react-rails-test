<h1>Ng#index</h1>
<p>Find me in app/views/ng/index.html.erb</p>

<div ng-app="App">
  <h3>Number Increment</h3>
  <div ng-controller="MainController">
    <button type="button" class="btn btn-success" ng-click="addNumber()">+1</button>
    <button type="button" class="btn btn-danger"  ng-click="subNumber()">-1</button>
    <div>now {{number}}.</div>
  </div>

  <hr>

  <div ng-controller="ClientController" ng-init="clients=<%= @clients.to_json %>">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th class="col-md-4 text-center">id</th>
                <th class="col-md-4 text-center">name</th>
                <th class="col-md-4 text-center">pref</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="client in clients">
                <td class="col-md-4 text-center">{{ client.id }}</td>
                <td class="col-md-4 text-center">{{ client.name }}</td>
                <td class="col-md-4 text-center">{{ client.pref }}</td>
              </tr>
            </tbody>
          </table>
        </div>
        <button type="button" class="btn btn-primary" ng-click="getClient()">get client</button>
      </div>
    </div>

  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
<script src="/app.js"></script>
